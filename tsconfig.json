{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ES2022", "ES2023", "DOM", "Decorators"],
		"allowJs": false,
		"moduleResolution": "Bundler",
		"allowUnreachableCode": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"isolatedModules": true,
		"baseUrl": ".",
	},
	"include": [
		"vite.config.js",
		"./server/**/*.ts",
		"./server/components/**/*.svelte"
	],
	"exclude": [
		"node_modules",
		"./server/public"
	]
}
